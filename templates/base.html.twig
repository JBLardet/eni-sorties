<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Sortir.com{% endblock %}</title>
        <meta name="viewport"
              content="width=device-width, user-scalable=yes, initial-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="ie=edge">
        <link rel="stylesheet" href="{{ asset('css/app.css') }}">
        <link rel="icon" type="image/x-icon" href="{{ asset('assets/img/no5-favicon.ico') }}">
    </head>
    <body>
    <header>
        <h1><a href="{{ path('sorties_liste') }}"><img src="{{ asset('assets/img/logo.png') }}" alt="sortir.com"></a></h1>

        <nav>
            <ul>
                {% if is_granted("ROLE_ADMIN") %}
                <li><a href="#" title="">Villes</a></li>
                <li><a href="#" title="">Campus</a></li>
                {% endif %}


                {% if app.user %}
                    <li><a href="{{ path('sorties_liste') }}" title="">Accueil</a></li>
                    <li><a href="#" title="">Mon Profil</a></li>
                    <li><a href="{{path('app_logout')}}" title="">Se d√©connecter</a></li>
                {% endif %}
            </ul>
        </nav>
    </header>
    <main>
        {% block body %}{% endblock %}
    </main>
    <footer>
        <div>&copy; {{ "now"|date("Y") }} Sortir.com, par <img style="height:35px;vertical-align: middle;" src="{{ asset('assets/img/Sno5-logoWhite.png') }}"></div>
    </footer>


    </body>
</html>
