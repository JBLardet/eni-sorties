<form method="post" class="enligne" style="display:inline;" action="{{ path('user_delete', {'id': user.id}) }}" onsubmit="return confirm('Etes-vous sure de vouloir effacer cet utilisateur ?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
    <button class="btn enligne">Effacer l'utilisateur {{ user.pseudo }}</button>
</form>
