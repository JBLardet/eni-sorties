{% extends 'base.html.twig' %}

{% block title %}Utilisateur {{ user.pseudo }}{% endblock %}

{% block body %}

    {{ include('user/_photo.html.twig') }}


        <h1>{{ user.pseudo }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Pr√©nom</th>
                <td>{{ user.prenom }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ user.nom }}</td>
            </tr>
            <tr>
                <th>Tel</th>
                <td>{{ user.tel }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Campus</th>
                <td>{{ user.campus.nom }}</td>
            </tr>
        </tbody>
    </table>

    {% if app.user.id==user.id or is_granted("ROLE_ADMIN") %}
        <a href="{{ path('user_edit', {'id': user.id}) }}"><button class="btn enligne" value="Modifier le profil">Modifier le profil</button></a>
    {% endif %}
    {% if is_granted("ROLE_ADMIN") %}
        {{ include('user/_delete_form.html.twig') }}
        <a href="{{ path('user_index') }}"><button class="btn enligne" value="Liste de tous les utilisateurs">Liste de tous les utilisateurs</button></a>
    {% endif %}
{% endblock %}
